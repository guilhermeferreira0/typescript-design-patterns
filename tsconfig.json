{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, //n√£o permiti incoferencias no nome dos arquivos
    },
    "include": ["./src"]
}